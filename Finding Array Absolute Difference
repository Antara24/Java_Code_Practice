import java.util.*;
public class arrayabsolutediff{
public static void main(String[] args) {
       Scanner sc=new Scanner(System.in);
       int n=sc.nextInt(),i,sum=0,sum1=0;
        int a[]=new int[10];
        for(i=0;i<n;i++){
            a[i]=sc.nextInt();
        }
        for(i=0;i<n;i++){
        if(a[i]%2==0){
            sum=sum+1;
        }
        else{
            sum1=sum1+1;
        }
    }
    int diff=sum-sum1;
    System.out.println(diff);
   }    
}
